<form
			id="form-meta"
			class="grid form-meta form-meta-profile"
			method="POST"
			action="/<%= data.username %>"
			enctype="multipart/form-data">

	<fieldset class="form-meta__fieldset_square">

		<%~ include('../input/inputFile', {
		form: 'user_meta-form',
		name: 'avatar',
		accept: 'image/*',
		src_image: data.src.avatar && data.src.avatar.original,
		}) %>

	</fieldset>

	<fieldset class="form-meta__fieldset_square">

		<h4 style="height: 100%;">
			<%~ include('../textarea/textarea', {
			form: 'user_meta-form',
			name: 'text',
			text: data.text,
			placeholder: 'profile-text',
			}) %>
		</h4>

	</fieldset>

	<% const url_formaction = `/${data.username}` %>
	<% const user_dir = `/public/data_uploads/users/${data.user_id}/` %>

	<%~ include('../fieldset/fieldsetInputFile', { 
		src: 'src', 
		className: 'form-meta__fieldset_square' 
	}) %>

	<%~ include('../fieldset/fieldsetInputFile', { 
		src: 'src',
		className: 'form-meta__fieldset_square' 
	}) %>

	<%~ include('../fieldset/fieldsetRadioMarkup', {
		markup: data.markup,
		className: 'form-meta__fieldset_square' 
	}) %>

	<fieldset class="form-meta__fieldset_square form-meta__submit-buttons">
		<%~ include('../button/button', { 
			text: 'сохранить изменения',
			className: "form-meta__submit-button" 
		}) %>

		<%~ include('../button/button_delete', { text: 'удалить профиль' }) %>
	</fieldset>

	<hr>
</form>
