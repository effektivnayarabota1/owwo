<form
			id="form-meta-element"
			class="grid form-meta form-meta-element"
			method="POST"
			action="/element/<%= data.element_id %>?method=PUT"
			enctype="multipart/form-data">

	<fieldset class="card form-meta__fieldset">
		<%~ include('../input/inputFile', {
		form: 'form-meta-element',
		name: 'cover',
		src: data.src.cover.original,
		accept: 'image/*',
		}) %>
	</fieldset>

	<fieldset class="card form-meta__fieldset">
		<h5 style="height: 100%;">
			<%~ include('../textarea/textarea', {
			form: 'form-meta-element',
			name: 'text',
			text: data.text,
			placeholder: 'element-text',
			}) %>
		</h5>
	</fieldset>

	<div class="card">
		<%~ include('../fieldset/fieldsetInputFile', { 
			form: 'form-meta-element',
			name: 'style',
			accept: '.css',
			src: data.src.style,
			className: 'form-meta__fieldset'
		}) %>

		<hr>

		<%~ include('../fieldset/fieldsetInputFile', { 
			form: 'form-meta-element',
			name: 'script',
			accept: '.js',
			src: data.src.script,
			className: 'form-meta__fieldset'
		}) %>
	</div>

	<div class="card">
		<%~ include('../button/button', { 
			text: 'сохранить изменения',
			className: "form-meta__submit-button" 
		}) %>

		<%~ include('../button/button_delete', { text: 'удалить элемент' }) %>

	</div>

	<hr>

</form>
