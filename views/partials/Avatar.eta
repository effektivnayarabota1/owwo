<a
	class="avatar"
	href="/#$=url$#"
>
	#$ if (src) { $#
	<img
		class="avatar-image"
		src="#$=src$#"
		alt=""
	>
	#$ } else { $#
	<h2 style="width: 100%; height: 100%; color: var(--grey-light);">
		≧◡≦
	</h2>
	#$ } $#
</a>

<style>
	.avatar {
		display: block;
		height: fit-content;
		text-decoration: none !important;
		grid-column: auto;
	}

	@media screen and (max-width: 444px) {
		.avatar {
			grid-column: 1/-1;
		}
	}

</style>
