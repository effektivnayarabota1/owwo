<% layout("_layout") %>

<div class="element list">
	<%~ include("blocks/cardElement", { data, size: '80vh' }) %>
</div>

<div class="element-info grid">
	<div class="grid_break-end">
		<%~ include("blocks/author", {data}) %>
		<%~ include("blocks/date", {data}) %>
	</div>

	<div class="grid_break-start">
		<h6>
			Страница:
			<a
				 href="/page/<%= data.page %>"
				 style="color: var(--black);"><%= data.page %></a>
		</h6>
	</div>
</div>
