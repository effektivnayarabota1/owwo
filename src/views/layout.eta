    <link rel="stylesheet" href="/views/button/button.css" />
    <link rel="stylesheet" href="/views/card/card.css" />
    <link rel="stylesheet" href="/views/fieldset/fieldset.css" />
    <link rel="stylesheet" href="/views/footer/footer.css" />
    <link rel="stylesheet" href="/views/formMeta/formMeta.css" />
    <link rel="stylesheet" href="/views/header/header.css" />
    <link rel="stylesheet" href="/views/input/input.css" />
    <link rel="stylesheet" href="/views/textarea/textarea.css" />

    <% if (it.data && data.src && data.src.style) { %>
    <link rel="stylesheet" href="<%= data.src.style %>" />
    <% } %>
  </head>

  <body>
    <div class="wrapper">
      <%~ include("header/header", it )%> <%~ body %> <%~
      include("footer/footer", it )%>
    </div>

    <% if (it.data && data.src && data.src.script) { %>
    <script src="<%= data.src.script %>"></script>
    <% } %>
  </body>
</html>
