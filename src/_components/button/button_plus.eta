<button
				class="button button_plus border-outter"
				formmethod="POST">
	<%~ include('./svg/+') %>
</button>

<style>
	.button-plus_container {
		width: 100%;
		height: 100%;
		display: flex;
	}

	.button-plus_button {

		border-color: var(--grey-dark);
	}

	.button-plus_button path {
		fill: var(--grey-dark);
	}

	.button-plus_button:hover {
		background-color: var(--grey-dark);
	}

	.button-plus_container:hover .button-plus_button path {
		fill: var(--white);
	}

</style>
